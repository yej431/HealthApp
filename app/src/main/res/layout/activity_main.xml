<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/age_title"
                    android:padding="8dp"
                    android:text="Age (InYear)"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_title"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="30"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="decreaseAge"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/age"
                    android:background="@drawable/ic_baseline_remove_circle_outline_24"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="increaseAge"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/age"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_baseline_add_24"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weight_title"
                    android:padding="8dp"
                    android:text="Weight (InKg)"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight_title"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="decreaseWeight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/weight"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_baseline_remove_circle_outline_24" />
                <androidx.appcompat.widget.AppCompatButton
                    android:onClick="increaseWeight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/weight"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_baseline_add_24"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/middle_card"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="26dp"
                android:text="Height"
                android:textColor="@color/black"
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/height_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="0 Cm"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:progress="150"
                android:max="500"
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/height_value"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="8dp"
        android:id="@+id/bottom_card"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:text="Gender"
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/iam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="I'm"
                android:textColor="@color/black"
                android:textSize="42dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/male"
                android:textColor="@color/black"
                android:text="Male"
                android:textSize="18dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/gender_switch"
                android:padding="16dp"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/iam"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Female"
                android:padding="16dp"
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/gender_switch"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/female"
                android:padding="16dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/calculate_button"
        android:text="Calculate"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:onClick="showResult"
        android:background="@drawable/calculate_button_background"/>

</LinearLayout>